<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.phoenix.moonshinerscalculator">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.dilution.DilutionActivity"
            android:label="@string/dilution_title"
            android:noHistory="true" />
        <activity
            android:name=".ui.activity.braga.BragaActivity"
            android:label="@string/braga_title"
            android:noHistory="true" />
        <activity
            android:name=".ui.activity.alcoholstrength.AlcoholStrengthActivity"
            android:label="@string/alcohol_strength_title"
            android:noHistory="true" />
        <activity
            android:name=".ui.activity.correctstregth.CorrectStrengthActivity"
            android:label="@string/strength_correct_title"
            android:noHistory="true" />
        <activity
            android:name=".ui.activity.sugartomonosugar.SugarToGlucoseActivity"
            android:label="@string/sugar_to_glucose_title"
            android:noHistory="true" />
        <activity
            android:name=".ui.activity.strengthbytemperature.StrengthByTemperatureActivity"
            android:label="@string/sugar_to_glucose_title"
            android:noHistory="true" />
        <activity
            android:name=".ui.activity.recipes.RecipesActivity"
            android:label="@string/recipes_title"
            android:noHistory="true" />

        <service
            android:name=".services.RecipesIntentService"
            android:exported="false" />
    </application>

</manifest>